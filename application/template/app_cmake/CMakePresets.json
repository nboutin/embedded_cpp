{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "CMAKE_INSTALL_PREFIX": "~/.local",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "cross_compile",
      "displayName": "Cross Compilation",
      "description": "Cross Compilation with Ninja",
      "inherits": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "toolchainFile": "../../../tool/cmake/toolchain/arm_gcc_toolchain.cmake"
    },
    {
      "name": "host_compile",
      "displayName": "Host Compilation",
      "description": "Host Compilation with Ninja",
      "inherits": "base",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}"
    }
  ],
  "buildPresets": [
    {
      "name": "base",
      "hidden": true,
      "verbose": false
    },
    {
      "name": "cross_compile",
      "displayName": "Cross Compilation",
      "inherits": "base",
      "configurePreset": "cross_compile"
    },
    {
      "name": "host_compile",
      "displayName": "Host Compilation",
      "inherits": "base",
      "configurePreset": "host_compile"
    }
  ],
  "testPresets": []
}
