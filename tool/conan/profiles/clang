[settings]
arch=x86_64
build_type=Release
compiler=clang
compiler.cppstd=20
compiler.libcxx=libstdc++
compiler.version=17
os=Windows

[conf]
{# conan config list #}
{# https://docs.conan.io/2/reference/config_files/global_conf.html?highlight=tools%20build%20cross_building #}
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:compiler_executables={"c": "clang", "cpp": "clang++"}
tools.build:cflags=["-target x86_64-pc-windows-gnu"]
tools.build:cxxflags=["-target x86_64-pc-windows-gnu"]

[buildenv]
{# included into CMakePresets.json generated by Conan #}
CMAKE_EXPORT_COMPILE_COMMANDS=ON
